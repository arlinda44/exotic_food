{% extends 'base.html.twig' %}

{% block title %}Blogs{% endblock %}

{% block body %}
    <h1>Blogs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Introduction</th>
                <td>{{ blog.introduction }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>DateCreate</th>
                <td>{{ blog.dateCreate ? blog.dateCreate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ blog.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_blogs_index') }}">back to list</a>

    <a href="{{ path('app_blogs_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blogs/_delete_form.html.twig') }}
{% endblock %}
